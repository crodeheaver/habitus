{{yield}}
<form {{action "savePage"}}>
  <label class="label title is-4">Page Title</label>
  <p class="control">
    {{input class="input" type="text" name='title' value=title placeholder="Index"}}
  </p>
  <label class="label title is-4">Page Alias</label>
  <p class="control">
    <input class="input" type="text" value={{alias}} placeholder="Disabled input" disabled>
  </p>
  <label class="label title is-4">Page content <small class=''>Accepts markdown content</small></label>
  <p class="control">
    {{textarea class="textarea" name='content' value=content placeholder="##Page Content"}}
  </p>
  <p class="control">
    <button class="button is-success">
      Save
    </button>
  </p>
  <div class='content content-preview'>
    <h1 class='title is-2'>Page Preview</h1>
    <hr/>
    {{{previewContent}}}
  </div>
</form>